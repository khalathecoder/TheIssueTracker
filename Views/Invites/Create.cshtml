@model TheIssueTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center">Create</h1>
<h4 class="text-center">Invite</h4>
<hr />
<div class="col-lg-12 col-md-12 d-flex justify-content-center">
    <div class="card custom-card">
        <div class="card-body">
            <div>
                <p class="text-muted text-center card-sub-title">Invite a new user to join!</p>
            </div>
            <form asp-action="Create">
                <div class="row row-xs align-items-center mg-b-20 p-2">
                    <div class="col-md-4">
                        <label class="mg-b-0">Email</label>
                    </div>
                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <input type="email" asp-for="InviteeEmail" class="form-control" placeholder="Enter email">
                    </div>
                </div>
                <div class="row row-xs align-items-center mg-b-20 p-2">
                    <div class="col-md-4">
                        <label class="mg-b-0">Firstname</label>
                    </div>
                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <input type="text" asp-for="InviteeFirstName" class="form-control" placeholder="Enter first name">
                    </div>
                </div>
                <div class="row row-xs align-items-center mg-b-20 p-2">
                    <div class="col-md-4">
                        <label class="mg-b-0">Lastname</label>
                    </div>
                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <input type="text" asp-for="InviteeLastName" class="form-control" placeholder="Enter last name">
                    </div>
                </div>
                <div class="row row-xs align-items-center mg-b-20 p-2">
                    <div class="col-md-4">
                        <label class="mg-b-0">Select Project</label>
                    </div>
                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <select class="form-control" asp-for="ProjectId" asp-items="@ViewBag.ProjectId">
                            <option value="">Select Project</option>
                        </select>
                    </div>
                </div>
                <div class="row row-xs align-items-center mg-b-20 p-2">
                    <div class="col-md-4">
                        <label class="mg-b-0">Message</label>
                    </div>
                    <div class="col-md-8 mg-t-5 mg-md-t-0">
                        <textarea asp-for="Message" multiple="multiple" class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row justify-content-end mb-0 p-2">
                    <div class="col-md-8 pl-md-2">
                        <input type="submit" class="btn ripple btn-primary pd-x-30 mg-r-5" value="Send Invite" />
                        <button class="btn ripple btn-secondary pd-x-30">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="text-center">
    <a asp-action="Index" asp-controller="Company" >Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
